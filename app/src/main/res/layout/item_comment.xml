<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/description_image_avatar"
        android:src="@drawable/ic_song_playing"
        app:civ_border_color="@color/color_blue_500"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/space_8"/>

    <TextView
        android:layout_marginTop="@dimen/space_4"
        android:id="@+id/txt_name_user_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_16"
        android:textColor="@color/black"
        android:textSize="@dimen/text_sie_16"
        android:text="admin"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar" />

    <TextView
        android:id="@+id/txt_content_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_16"
        android:textColor="@color/color_grey_900"
        android:textSize="@dimen/text_sie_14"
        android:text="hay"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/txt_name_user_comment"
        app:layout_constraintStart_toEndOf="@id/avatar" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_16"
        android:textColor="@color/color_grey_900"
        android:textSize="@dimen/text_sie_12"
        android:text="vá»«a xong"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/txt_content_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="@dimen/space_16"/>

</android.support.constraint.ConstraintLayout>