<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_image_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/space_2"
    app:cardElevation="0dp"
    android:layout_margin="@dimen/space_4">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/song_image"
            android:layout_width="@dimen/size_image_item"
            android:layout_height="@dimen/size_image_item"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/song_name" />

        <TextView
            android:id="@+id/song_name"
            android:text="ten bai hat"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/song_image"
            app:layout_constraintBottom_toTopOf="@id/song_singer" />

        <TextView
            android:id="@+id/song_singer"
            android:text="ten ca si"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/space_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/song_image"
            app:layout_constraintTop_toBottomOf="@id/song_name"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/song_more"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:src="@drawable/playing"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/song_image"
            android:layout_marginRight="4dp"
            android:visibility="invisible"/>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
