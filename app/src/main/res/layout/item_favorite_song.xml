<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_layout"
    >

    <ImageView
        android:id="@+id/image_avatar_song_favorite"
        android:layout_width="@dimen/width_avatar_song"
        android:layout_height="@dimen/height_item_song"
        android:scaleType="fitXY"
        android:contentDescription="@string/description_image_avatar"
        android:src="@drawable/ic_song_playing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_title_song"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_title_song_favorite"
        android:layout_width="@dimen/width_text_song"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_layout"
        android:textColor="@color/color_grey_900"
        android:textSize="@dimen/text_size_title"
        app:layout_constraintBottom_toTopOf="@id/text_singer_song_favorite"
        app:layout_constraintLeft_toRightOf="@id/image_avatar_song_favorite"
        app:layout_constraintRight_toLeftOf="@id/image_delete_favorite"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_singer_song_favorite"
        android:layout_width="@dimen/width_text_song"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_layout"
        android:textColor="@color/color_grey_400"
        android:textSize="@dimen/text_size_singer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image_avatar_song_favorite"
        app:layout_constraintRight_toLeftOf="@id/image_delete_favorite"
        app:layout_constraintTop_toBottomOf="@id/text_title_song_favorite"
        />

    <ImageView
        android:id="@+id/image_delete_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_layout"
        android:layout_marginTop="@dimen/margin_layout"
        android:contentDescription="@string/description_image_view"
        android:src="@drawable/ic_delete_song"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_title_song"
        app:layout_constraintTop_toTopOf="parent"
        />

</android.support.constraint.ConstraintLayout>

