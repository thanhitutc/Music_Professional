<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:background="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/space_4"
    app:cardElevation="@dimen/space_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            app:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/txt_name_detail"
            style="@style/title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:maxLines="2"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_artists"
            android:textColor="@color/sub_title_color"
            android:textSize="@dimen/text_sie_13"
            android:layout_gravity="bottom"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
