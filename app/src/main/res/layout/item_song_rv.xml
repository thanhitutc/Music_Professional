<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_image_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/song_image"
        android:layout_width="@dimen/size_image_item"
        android:layout_height="@dimen/size_image_item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/song_name"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/song_name"
        android:text="ten bai hat"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/song_image"
        app:layout_constraintBottom_toTopOf="@id/song_singer"/>

    <TextView
        android:id="@+id/song_singer"
        android:text="ten ca si"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/song_image"
        app:layout_constraintTop_toBottomOf="@id/song_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/song_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="4dp"/>



</android.support.constraint.ConstraintLayout>