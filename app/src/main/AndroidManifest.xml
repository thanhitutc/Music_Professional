        <activity android:name=".screens.offline.MainOfflineActivity"/>
        <activity android:name=".screens.offline.addsongtoplaylist.SongAddToPlaylistOffActivity"/>
        <activity android:name=".screens.offline.detailplaylistoff.DetailPlaylistOffActivity"/>
        <activity android:name=".screens.offline.listsongaddfavorite.ListSongAddActivity"/>
        <activity android:name=".screens.offline.listsongaddplaylist.ListAddPlaylistOffActivity"/>
